<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/size10"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/itemColor"
        android:layout_width="@dimen/size32"
        android:layout_height="@dimen/size32"
        app:cardCornerRadius="@dimen/size16"
        app:cardBackgroundColor="@color/red"
        android:visibility="visible"
        app:cardUseCompatPadding="false"
        app:cardElevation="0dp"
        />

    <ImageView
        android:id="@+id/imvPick"
        android:layout_width="@dimen/size32"
        android:layout_height="@dimen/size32"
        android:src="@drawable/ic_pick_color"
        android:visibility="invisible"
        />

    <View
        android:id="@+id/mask"
        android:layout_width="@dimen/size32"
        android:layout_height="@dimen/size32"
        android:background="@drawable/bg_main_round16_stroke"
        />
</RelativeLayout>